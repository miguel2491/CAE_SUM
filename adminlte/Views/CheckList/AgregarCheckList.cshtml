@{
    ViewBag.Title = "Agregar CheckList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Agregar Check List
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">CheckList</a></li>
            <li class="active">Agregar CheckList</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h3 class="box-title">Agregar CheckList </h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <label>Tipo Check List</label>
                                <select id="tipo_check" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">Check list de contenido carpeta operativa grupal</option>
                                    <option value="2">Check list carpeta operativa credito individual, PE, ME, STC</option>
                                    <option value="3">Check list carpeta operativa Agrosumate y Rural</option>
                                </select>
                            </div>
                            <div class="form-group col-xs-6 col-md-4" style="display:none" id="div_cliente">
                                <label for="exampleInputEmail1">Cliente</label>
                                <input type="text" class="form-control" id="cliente" disabled value="1">
                            </div>
                            <div class="form-group col-xs-6 col-md-4" style="display:none" id="div_grupo">
                                <label for="exampleInputEmail1">Grupo</label>
                                <input type="text" class="form-control" id="grupo" disabled value="1">
                            </div>
                            <div class="form-group col-xs-6 col-md-4">
                                <label for="exampleInputPassword1">Asesor</label>
                                <input type="text" class="form-control" id="asesor" disabled value="1">
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group col-xs-6 col-md-4" id="div_integrantes" style="display:none">
                                <label>Integrantes</label>
                                <input type="text" class="form-control" id="integrantes" value="2" onkeypress="return isNumberKey(event)">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <label>Secuencia</label>
                                <input type="text" class="form-control" id="secuencia" placeholder="1">
                            </div>
                            <div class="col-xs-6 col-md-4" id="div_monto" style="display:none">
                                <label>Monto</label>
                                <input type="text" class="form-control" id="monto_solicitado" placeholder="$1.00" >
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Tipo Garantía</label>
                                <select id="tipo_garantia" class="form-control select2">
                                    <option value="0" selected> Seleccione...</option>
                                    <option value="1">Prenda con Factura</option>
                                    <option value="2">Hipotecaria</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <label>Fecha de Validación</label>
                                <input type="text" class="form-control fca" id="fecha">
                            </div>
                            <div class="form-group col-xs-6 col-md-4" style="display:none" id="div_codigo">
                                <label>Código de Operación</label>
                                <input type="text" class="form-control" id="codigo_operacion" placeholder="AX98HS">
                            </div>
                            <div class="checkbox col-xs-6 col-md-4">
                                <label>
                                    <input type="checkbox" id="status" name="status_check"> Activo
                                </label>
                            </div>
                        </div>
                    </div>
                        <!-- /.box-body -->
                        <div class="box-footer">
                            <button class="btn btn-primary" onclick="addCheckList()">Agregar</button>
                        </div>

                    </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script>
    $(document).ready(function () {
        $('.select2').select2();
        $('#monto_solicitado').maskMoney();
        $('.fca').datepicker({
            autoclose: true,
            dateFormat: 'dd/mm/yyyy',
        })
        $(".fca").keypress(function (event) { event.preventDefault(); });

    });


</script>
