@{
    ViewBag.Title = "Login";
    Layout = "";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>SÚMATE| Login</title>
    <!-- Tell the browser to be responsive to screen width -->
    <meta content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no" name="viewport">
    <!-- Bootstrap 3.3.7 -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/bootstrap/dist/css/bootstrap.min.css">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/font-awesome/css/font-awesome.min.css">
    <!-- Ionicons -->
    <link rel="stylesheet" href="~/Scripts/adminlte/components/Ionicons/css/ionicons.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/Content/adminlte/css/AdminLTE.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/Scripts/adminlte/plugins/iCheck/square/blue.css">
    <!-- Loading -->
    <link rel="stylesheet" href="~/Content/adminlte/css/loading.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
    <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
    <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->
    <!-- Google Font -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,600,700,300italic,400italic,600italic">
</head>
<body class="hold-transition login-page">
    <div class="login-box" id="logeado" style="background:#006140;border-radius:20px;">
        <div class="login-logo" style="padding:10px;">
            <div align="center">
                <img src="~/Content/adminlte/img/login.png" class="img-responsive" />
            </div>
            
        </div>
        <!-- /.login-logo -->
        <div class="login-box-body" style="background:#CCDED4;border-bottom-left-radius:20px;border-bottom-right-radius:20px">
            <div class="form-group has-feedback">
                <label style="margin-left:30%;margin-bottom:5px;text-transform:uppercase;color:#4E8F75;font-size:24px">Usuario</label>
                <input type="text" maxlength="12" id="usuario" class="form-control" placeholder="USUARIO" style="text-transform:uppercase">
                <span class="glyphicon glyphicon-user form-control-feedback" style="top:35px !important"></span>
            </div>
            <div class="form-group has-feedback">
                <label style="margin-left:30%;margin-bottom:5px;text-transform:uppercase;color:#4E8F75;font-size:24px">Password</label>
                <input type="password" class="form-control" id="password" placeholder="Password">
                <span class="glyphicon glyphicon-lock form-control-feedback" style="top:35px !important"></span>
            </div>
            <div class="row">
                <!-- /.col -->
                <div class="col-xs-12 col-md-12" id="div_error" style="visibility:hidden;text-align:center">
                    <label style="text-align:center;color:red;text-transform:uppercase">Usuario/Contraseña no válida</label>
                </div>
                <div class="col-xs-4 col-md-4"></div>
                <div class="col-xs-12 col-md-4">
                    <!--<a href="@Url.Action("Inicio", "Dashboard")" class="btn btn-block btn-flat" style="background:#FFB718;color:white;border-color:#FFB718;text-transform:uppercase;font-weight:bold">Login</a>-->
                    <button class="btn btn-block btn-flat" style="background:#FFB718;color:white;border-color:#FFB718;text-transform:uppercase;font-weight:bold" onclick="inicia_sesion()">Login</button>
                </div>
                <div class="col-xs-4 col-md-4"></div>
                <!-- /.col -->
            </div>
            <!-- /.social-auth-links -->
        </div>
        <!-- /.login-box-body -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery 3 -->
    <script src="~/Scripts/adminlte/components/jquery/dist/jquery.min.js"></script>
    <!-- Bootstrap 3.3.7 -->
    <script src="~/Scripts/adminlte/components/bootstrap/dist/js/bootstrap.min.js"></script>
    <!-- iCheck -->
    <script src="~/Scripts/adminlte/plugins/iCheck/icheck.min.js"></script>
    <!-- LOADING -->
    <script src="~/Scripts/adminlte/plugins/jquery-loading/jquery.loading.min.js"></script>
    <script type="text/javascript">
      $(document).ready(function () {
        $('input').iCheck({
          checkboxClass: 'icheckbox_square-blue',
          radioClass: 'iradio_square-blue',
          increaseArea: '20%' /* optional */
        });
      });

        function inicia_sesion() {
            var usuario = $("#usuario").val();
            var password = $("#password").val();
            $("#logeado").loading();
            if (usuario == "sumate" && password == "12345678") {
                $("#div_error").css('visibility', 'hidden');
                var url = '/Dashboard/Inicio';
                window.location.href = url;
            } else {
                $("#div_error").css('visibility', 'visible');
                $("#usuario").val("");
                $("#password").val("");
                $('#logeado').loading('stop');
            }
        }
    </script>
</body>
</html>
