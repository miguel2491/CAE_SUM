@{
    ViewBag.Title = "Agregar Prospecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<input type="hidden" id="iddProspecto" value="@ViewBag.ID" />
<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Edita Prospecto
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Prospectos</a></li>
            <li class="active">Edita Prospectos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h2 class="box-title">Edita Prospecto</h2>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-3">
                                <label>Sucursal</label>
                                <input type="hidden" id="idSucursal" value="@ViewBag.sucursal" />
                                <select id="sucursal" class="form-control"></select>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-3">
                                <div class="form-group">
                                    <label>Fecha:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="fca form-control pull-right" value="@ViewBag.fecha" id="fecha">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <label>Nombre del Prospecto</label>
                                <input type="text" class="form-control" id="nombre" value="@ViewBag.nombre" placeholder="Nombre(s)" />
                            </div>
                            <div class="col-xs-3">
                                <label>Apellido Paterno</label>
                                <input type="text" class="form-control" id="app" value="@ViewBag.app" placeholder="Primer Apellido" />
                            </div>
                            <div class="form-group col-xs-3">
                                <label>Apellido Materno</label>
                                <input type="text" class="form-control" id="apm" value="@ViewBag.apm" placeholder="Segundo Apellido" />
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <input type="hidden" id="estado_id" value="@ViewBag.estado" />
                                <label>Estado</label>
                                <select id="estado" class="form-control"></select>
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <input type="hidden" id="munic_id" value="@ViewBag.munic" />
                                <label>Municipio</label>
                                <select id="municipio" class="form-control"></select>
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <input type="hidden" id="colonia_id" value="@ViewBag.colonia" />
                                <label>Colonia</label>
                                <select id="colonia" class="form-control"></select>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-xs-6 col-md-4">
                                <label>C.P.</label>
                                <input type="text" id="cp" class="form-control" disabled value="@ViewBag.cp">
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Calle</label>
                                <input type="text" class="form-control" id="calle" placeholder="Av Flores Magón" value="@ViewBag.calle">
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Número</label>
                                <input type="text" class="form-control" id="numeroCalle" placeholder="Int  35A" value="@ViewBag.numero">
                            </div>
                        </div>
                            <div class="row mt-5">
                                <div class="col-xs-3">
                                    <label>Teléfono:</label>
                                    <input type="text" class="form-control" id="telefono" value="@ViewBag.telefono" onkeypress="return isNumberKey(event)" placeholder="(222) 222 222" maxlength="12">
                                </div>
                                <div class="col-xs-3">
                                    <label>Actividad / Negocio</label>
                                    <input type="text" class="form-control" id="actividad" placeholder="Industrial" value="@ViewBag.actividad">
                                </div>
                                <div class="col-xs-3">
                                    <input type="hidden" id="tipoProducto" value="@ViewBag.tipo_producto" />
                                    <label>Tipo de Producto</label>
                                    <select id="tipo_producto" class="form-control"></select>
                                </div>
                                <div class="col-xs-3">
                                    <input type="hidden" id="id_asesor" value="@ViewBag.asesor" />
                                    <label>Asesor que visitara</label>
                                    <select id="asesor" class="form-control">
                                        <option value="0" selected>Seleccione...</option>
                                        <option value="1">Yaneli Torres</option>
                                        <option value="1">Cristian Solar</option>
                                    </select>
                                </div>
                            </div>
                            <hr />
                            <div class="row">
                                <div class="col-xs-4">
                                    <div class="form-group">
                                        <label>Fecha:</label>
                                        <div class="input-group date">
                                            <div class="input-group-addon">
                                                <i class="fa fa-calendar"></i>
                                            </div>
                                            <input type="text" class="fca form-control pull-right" value="@ViewBag.fechaVisita" id="fechaVisita">
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-4">
                                    <label>Resolución o parte del proceso en el que se encuentra:</label>
                                    <input type="text" class="form-control" id="resolucion" placeholder="Resolución" value="@ViewBag.resolucion">
                                </div>
                                <div class="col-xs-4">
                                    <label>¿Cómo se enteró el prospecto de Financiera Súmate?</label>
                                    <textarea class="form-control" id="enterado" placeholder="Por la Promoción en un folleto">@ViewBag.enterado</textarea>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-xs-4">
                                    <br /><label>FPDC.P-002.1</label>
                                    <input type="hidden" id="tipo_solicitud" value="FPDC.P-002.1" />
                                </div>
                            </div>
                        </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button class="btn btn-primary" onclick="uppProspecto()">Actualizar</button>
                    </div>

                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script>
    $(document).ready(function () {
        getEstados();
        getProducto();
        getSucursal();

        setTimeout(function () { ListaPosterior(); }, 1000);
        $('.fca').datepicker({
            autoclose: true,
            dateFormat: 'dd/mm/yyyy',
            Default: "es"
        })
        $('#asesor').select2({
            width: '100%',
            allowClear: true,
        });
        $('#colonia').select2({
            width: '100%',
            allowClear: true,
        });
    });

    function ListaPosterior() {
        var idSucursal = $("#idSucursal").val();
        $("#sucursal").val(idSucursal).change();
        var asesor = $("#id_asesor").val();
        $("#asesor").val(asesor).change();
        var tp = $("#tipoProducto").val();
        $("#tipo_producto").val(tp).change();
        var asesor = $("#id_asesor").val();
        $("#asesor").val(asesor).change();
        var estado = $("#estado_id").val();
        $("#estado").val(estado).change();
        setTimeout(function () { ListaMuni(); }, 1500);
    }

    function ListaMuni() {
        var muni = $("#munic_id").val();
        $("#municipio").val(muni).change();
        setTimeout(function () { ListaCP(); }, 1500);
    }

    function ListaCP() {
        var cp = $("#cp_id").val();
        $("#cp").val(cp).change();
        setTimeout(function () { ListaColonia(); }, 1500);
    }

    function ListaColonia() {
        var colonia = $("#colonia_id").val();
        $("#colonia").val(colonia).change();
    }
</script>

