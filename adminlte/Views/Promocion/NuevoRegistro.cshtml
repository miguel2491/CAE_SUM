@{
    ViewBag.Title = "Agregar Prospecto";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Agregar Nuevo Prospecto
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Prospectos</a></li>
            <li class="active">Agregar Prospectos</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h2 class="box-title">Agregar Nuevo Prospecto</h2>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-3">
                                <label>Sucursal</label>
                                <select id="sucursal" class="form-control"></select>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-3">
                                <div class="form-group">
                                    <label>Fecha:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="fca form-control pull-right" id="fecha">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-3">
                                <label>Nombre del Prospecto</label>
                                <input type="text" class="form-control" id="nombre" placeholder="Nombre(s)"/>
                            </div>
                            <div class="col-xs-3">
                                <label>Apellido Paterno</label>
                                <input type="text" class="form-control" id="app" placeholder="Primer Apellido" />
                            </div>
                            <div class="form-group col-xs-3">
                                <label>Apellido Materno</label>
                                <input type="text" class="form-control" id="apm" placeholder="Segundo Apellido" />
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <label>Estado</label>
                                <select id="estado" class="form-control"></select>
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Municipio</label>
                                <select id="municipio" class="form-control"></select>
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Colonia</label>
                                <select id="colonia" class="form-control"></select>
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-xs-6 col-md-4">
                                <label>C.P.</label>
                                <input type="text" id="cp" class="form-control" disabled>
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Calle</label>
                                <input type="text" class="form-control" id="calle" placeholder="Av Flores Magón">
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Número</label>
                                <input type="text" class="form-control" id="numeroCalle" placeholder="Int  35A">
                            </div>
                        </div>
                        <div class="row mt-5">
                            <div class="col-xs-3">
                                <label>Teléfono:</label>
                                <input type="text" class="form-control" id="telefono" onkeypress="return isNumberKey(event)" placeholder="(222) 222 222 222" maxlength="12">
                            </div>
                            <div class="col-xs-3">
                                <label>Actividad / Negocio</label>
                                <input type="text" class="form-control" id="actividad" placeholder="Industrial">
                            </div>
                            <div class="col-xs-3">
                                <label>Tipo de Producto</label>
                                <select id="tipo_producto" class="form-control"></select>
                            </div>
                            <div class="col-xs-3">
                                <label>Asesor que visitara</label>
                                <select id="asesor" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">Yaneli Torres</option>
                                    <option value="1">Cristian Solar</option>
                                </select>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-4">
                                <div class="form-group">
                                    <label>Fecha:</label>
                                    <div class="input-group date">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="fca form-control pull-right" id="fechaVisita">
                                    </div>
                                </div>
                            </div>
                            <div class="col-xs-4">
                                <label>Resolución o parte del proceso en el que se encuentra:</label>
                                <input type="text" class="form-control" id="resolucion" placeholder="Resolución">
                            </div>
                            <div class="col-xs-4">
                                <label>¿Cómo se enteró el prospecto de Financiera Súmate?</label>
                                <textarea class="form-control" id="enterado" placeholder="Por la Promoción en un folleto"></textarea>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-4">
                                <br /><label>FPDC.P-002.1</label>
                                <input type="hidden" id="tipo_solicitud" value="FPDC.P-002.1" />
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button class="btn btn-primary" onclick="addProspecto()">Agregar</button>
                    </div>

                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script>
    $(document).ready(function () {
        getEstados();
        getProducto();
        getSucursal();

        $('.fca').datepicker({
            autoclose: true,
            dateFormat: 'dd/mm/yyyy',
            Default: "es"

        })
    });
</script>

