@{
    ViewBag.Title = "Acta de Integración Nuevo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Content Wrapper. Contains page content -->

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <h1>
            Agregar Nueva
        </h1>
        <ol class="breadcrumb">
            <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
            <li><a href="#">Acta</a></li>
            <li class="active">Acta de Integración</li>
        </ol>
    </section>
    <!-- Main content -->
    <section class="content">
        <div class="row">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="box box-primary">
                    <div class="box-header with-border">
                        <h2 class="box-title">Acta de Integración</h2>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body">
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <select class="form-control select2" id="tipo_check">
                                    <option selectd value="0">Selecciona</option>
                                </select>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                <div class="bootstrap-timepicker">
                                    <div class="form-group">
                                        <label>Hora:</label>
                                        <div class="input-group">
                                            <input type="text" id="hora" class="form-control timepicker">
                                            <div class="input-group-addon">
                                                <i class="fa fa-clock-o"></i>
                                            </div>
                                        </div>
                                        <!-- /.input group -->
                                    </div>
                                    <!-- /.form group -->
                                </div>
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Fecha</label>
                                <input type="text" class="form-control fca" id="fecha" />
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Grupo Comunal:</label>
                                <select id="grupoC" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">FRESAS VIP</option>
                                    <option value="2">LOS INTOCABLES</option>
                                </select>
                            </div>
                            <div class="form-group col-xs-6 col-md-3">
                                <label>Calle</label>
                                <input type="text" class="form-control" id="calle">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                <label>Municipio</label>
                                <select id="municipio" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">Puebla</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Monto Grupal</label>
                                <input type="text" class="form-control" id="monto" placeholder="$ 1,000.00" onkeypress="return isNumberKey(event)">
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                <label>Presidenta</label>
                                <select id="presidenta" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">Joel Hernandez</option>
                                    <option value="2">Paola Marquéz</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Tesorera</label>
                                <select id="tesorera" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">Samantha Carrasco</option>
                                    <option value="2">Pedro Arrieta</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Secretaria</label>
                                <select id="secretaria" class="form-control select2">
                                    <option value="0" selected>Seleccione...</option>
                                    <option value="1">Emanuel Lopéz</option>
                                    <option value="2">Isabel Peralta</option>
                                </select>
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Observaciones del Asesor</label>
                                <textarea class="form-control" id="obervaciones" placeholder="Observaciones del Asesor respecto a la conformación del grupo y/o recomendaciones"></textarea>
                            </div>
                        </div>
                        <hr />
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                <label>Porcentaje:</label>
                                <input type="text" class="form-control" maxlength="2" onkeypress="return isNumberKey(event)" id="porcentaje" placeholder="0%">
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Aportación Acordada Semanal</label>
                                <input type="text" class="form-control" id="aportacion_semanal" onkeypress="return isNumberKey(event)" placeholder="$ 100.00">
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Días de Reunión</label>
                                <input type="text" maxlength="2" class="form-control" id="dias_reunion" onkeypress="return isNumberKey(event)" placeholder="5">
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <div class="bootstrap-timepicker">
                                    <div class="form-group">
                                        <label>Horas de Reunión:</label>
                                        <div class="input-group">
                                            <input type="text" id="hrs_reunion" class="form-control timepicker">
                                            <div class="input-group-addon">
                                                <i class="fa fa-clock-o"></i>
                                            </div>
                                        </div>
                                        <!-- /.input group -->
                                    </div>
                                    <!-- /.form group -->
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-3">
                                <label>En casa de:</label>
                                <input type="text" class="form-control" id="casa_reunion" placeholder="Sr(a)">
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Cargo:</label>
                                <input type="text" class="form-control" id="cargo_reunion" placeholder="Presidente(a)">
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Ubicada en:</label>
                                <input type="text" class="form-control" id="ubicacion" placeholder="Calle">
                            </div>
                            <div class="col-xs-6 col-md-3">
                                <label>Minutos de tolerancia:</label>
                                <input type="time" id="minutos_tolerancia" class="form-control timepicker">
                            </div>                                        
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-md-4">
                                <label>Multa:</label>
                                <input type="text" class="form-control" id="multa" placeholder="$ 20.00" onkeypress="return isNumberKey(event)">
                            </div>
                            <div class="col-xs-6 col-md-4">
                                <label>Multa por Inasistencia:</label>
                                <input type="text" class="form-control" id="multa_inasistencia" placeholder="0" onkeypress="return isNumberKey(event)">
                            </div>
                        </div>
                    </div>
                    <!-- /.box-body -->
                    <div class="box-footer">
                        <button class="btn btn-primary" onclick="addActaIntegracion()">Agregar</button>
                    </div>

                </div>
                <!-- /.box -->
            </div>
            <!--/.col (left) -->
        </div>
        <!-- /.row -->
    </section>
    <!-- /.content -->
</div>
<!-- /.content-wrapper -->
<script>
    $(document).ready(function () {
        $('#monto').maskMoney();
        $('#aportacion_semanal').maskMoney();
        $('#multa').maskMoney();
        $('#multa_inasistencia').maskMoney();
        $('.select2').select2();
        $('.fca').datepicker({
            autoclose: true,
            dateFormat: 'dd/mm/yyyy',
        })
        $(".fca").keypress(function (event) { event.preventDefault(); });
        $('.timepicker').timepicker({
            showInputs: false
        })
        consultaContenidoCheck();
    });
</script>
