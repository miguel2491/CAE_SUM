            $("#telefono_ref").val("");
        });
    });

    var map, map2, infoWindow, infoWindowD;
    var referencias = [];
    $('#btn_referencia').click(function () {
        referencias.push({
            "nombre": $('#nombre_ref').val(),
            "app": $('#app_ref').val(),
            "apm": $('#apm_ref').val(),
            "colonia": $('#colonia_ref').val(),
            "calle": $('#calle_ref').val(),
